rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all recipe images
    match /recipes/{userId}/{allPaths=**} {
      allow read: if true;
      
      // Allow authenticated users to write only to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
